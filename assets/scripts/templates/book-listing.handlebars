<div class="book">
  <h2 class="dark-text"> All Events </h2>
  {{#each books as |book|}}
    <h2>
      <small>Title:</small> {{limit book.title 40}}
    </h2>
    <p>
      <small>Author:</small>
      {{#if book.author}}
        {{book.author}}
      {{else}}
        No author provided.
      {{/if}}
    </p>
    <!-- Button to hide book  -->
    <!-- <button class="btn btn-outline-dark event-hider-btn btn-sm" data-id="{{event.id}}">Close</button> -->
</div>

{{/each}}

<div class="book book-{{books.id}}">
  <h2 class="dark-text"> All Events </h2>
  {{#each events as |event|}}
    <h2>
      <small>Title:</small> {{limit books.title 40}}
    </h2>
    <p>
      <small>Author:</small>
      {{#if books.author}}
        {{event.description}}
      {{else}}
        No author provided.
      {{/if}}
    </p>
    <!-- Button to hide book  -->
    <!-- <button class="btn btn-outline-dark event-hider-btn btn-sm" data-id="{{event.id}}">Close</button> -->
</div>

{{/each}}

<div class="book">
  {{#each books as |book|}}
    <h2>
      <small>Title:</small> {{limit book.title 40}}
    </h2>
    <p>
      <small>Author:</small>
      {{#if book.author}}
        {{book.author}}
      {{else}}
        No author provided.
      {{/if}}
    </p>
    <!-- test -->
</div>

{{/each}}
